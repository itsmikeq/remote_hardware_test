<%= simple_form_for(@device) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :function %>
    Company<br />
    <%= f.select( :company_id, Company.all.collect {|c| [c.name, c.id]}, {:include_blank => 'None'})%><br />
    Associated Upload File<br />
    <%= f.select( :upload_id, Upload.all.collect {|u| [u.name, u.id]}, {:include_blank => 'None'})%>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
